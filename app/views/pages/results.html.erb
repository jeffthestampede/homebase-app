
<div class="row-fluid">
  <div class="span4">
    <h1><%= current_user.team1 %> News </h1><br>
    <div class="teamlogo">
      <%=image_tag "#{Team.where(:name => "#{current_user.team1}").first.league}#{Team.where(:name => "#{current_user.team1}").first.espn_id}.jpg", {:width => 85}%>
    </div>
    <% @results.each do |result| %>
      <ul>
        <li><a href="<%= result["links"]["web"]["href"] %>"><%= result["headline"] %></a></li>
      </ul>
    <% end %>
    <% @tresults["results"].first(5).each do |result| %>

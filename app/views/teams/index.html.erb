<h1>Listing teams</h1>

<table>
  <tr>
    <th>Sport</th>
    <th>League</th>
    <th>Name</th>
    <th>Espn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.sport %></td>
    <td><%= team.league %></td>
    <td><%= team.name %></td>
    <td><%= team.espn_id %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

